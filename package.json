{
  "name": "winservermanager",
  "version": "0.1.0",
  "description": "A modern, powerful Windows server management application designed to be better than WindowsGSM",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/main.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "webpack --mode=production",
    "build:backend": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,ts,json,md}",
    "prepare": "husky install"
  },
  "keywords": [
    "server-management",
    "game-server",
    "windows",
    "administration",
    "monitoring"
  ],
  "author": "WinServerManager Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/WinServerManager.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/WinServerManager/issues"
  },
  "homepage": "https://github.com/yourusername/WinServerManager#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "systeminformation": "^5.21.20",
    "child_process": "^1.0.2",
    "multer": "^1.4.5-lts.1",
    "archiver": "^6.0.1",
    "extract-zip": "^2.0.1",
    "node-fetch": "^3.3.2",
    "yaml": "^2.3.4",
    "joi": "^17.11.0",
    "socket.io": "^4.7.4",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "node-steam-api": "^1.0.8",
    "minecraft-protocol": "^1.47.0",
    "steam-server-query": "^2.0.1",
    "ftp": "^0.3.10",
    "ssh2": "^1.15.0",
    "axios": "^1.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.8",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.0",
    "@types/express-session": "^1.17.7",
    "@types/morgan": "^1.9.5",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.test.{js,ts}"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}